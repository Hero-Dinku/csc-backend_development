<section class="form-section">
    <h1>Add New Classification</h1>
    
    <form action="/inv/add-classification" method="post">
        <div class="form-group">
            <label for="classification_name">Classification Name:</label>
            <input type="text" id="classification_name" name="classification_name" 
                   pattern="[A-Za-z0-9]{1,30}" required>
            <small>1-30 characters, no spaces or special characters</small>
        </div>
        <button type="submit" class="btn">Add Classification</button>
    </form>
</section>
