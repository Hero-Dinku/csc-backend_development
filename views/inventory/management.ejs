<section class=\"management-view\">
    <h2>Inventory Management</h2>
    
    <% if (messages && messages.length > 0) { %>
        <div class=\"messages\">
            <% messages.forEach(message => { %>
                <div class=\"message <%= message.type || 'info' %>\">
                    <%= message.text %>
                </div>
            <% }); %>
        </div>
    <% } %>
    
    <div class=\"management-links\">
        <a href=\"/inv/add-classification\" class=\"btn-primary\">Add New Classification</a>
        <a href=\"/inv/add-inventory\" class=\"btn-secondary\">Add New Vehicle</a>
    </div>
</section>
