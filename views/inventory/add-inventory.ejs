<section class="form-section">
    <h1>Add New Vehicle</h1>
    
    <form action="/inv/add-inventory" method="post">
        <div class="form-group">
            <label for="classification_id">Classification:</label>
            <select id="classification_id" name="classification_id" required>
                <option value="">Choose Classification</option>
                <option value="1">Custom</option>
                <option value="2">Sedan</option>
                <option value="3">SUV</option>
                <option value="4">Truck</option>
            </select>
        </div>

        <div class="form-group">
            <label for="inv_make">Make:</label>
            <input type="text" id="inv_make" name="inv_make" value="<%= formData.inv_make || '' %>" required>
        </div>

        <div class="form-group">
            <label for="inv_model">Model:</label>
            <input type="text" id="inv_model" name="inv_model" value="<%= formData.inv_model || '' %>" required>
        </div>

        <div class="form-group">
            <label for="inv_year">Year:</label>
            <input type="number" id="inv_year" name="inv_year" value="<%= formData.inv_year || '' %>" 
                   min="1900" max="2030" required>
        </div>

        <div class="form-group">
            <label for="inv_price">Price:</label>
            <input type="number" id="inv_price" name="inv_price" value="<%= formData.inv_price || '' %>" 
                   step="0.01" min="0" required>
        </div>

        <button type="submit" class="btn">Add Vehicle</button>
    </form>
</section>
